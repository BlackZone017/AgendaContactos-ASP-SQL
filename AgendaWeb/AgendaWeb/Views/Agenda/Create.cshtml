@model AgendaWeb.Models.Agenda

@{
    ViewBag.Title = "Create";
}

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div>
            
        </div>

        <div class="columns is-centered">
            <div class="column is-one-third">
                <h4 class="title">Agenda</h4>
                <hr />

                @Html.ValidationSummary(true, "", new { @class = "is-danger" })
                <div class="field">
                    @Html.Label("Usuario", htmlAttributes: new { @class = "label" })
                    <div class="control">
                        <div class="select is-fullwidth">
                             @Html.DropDownList("idUsuario", (IEnumerable<SelectListItem>)ViewBag.idUsuario, htmlAttributes: new { @class = "input" })
                        </div>
                        @Html.ValidationMessageFor(model => model.idUsuario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="field">
                    @Html.LabelFor(model => model.nombreContacto,"Contacto", htmlAttributes: new { @class = "label" })
                    <div class="control">
                        @Html.EditorFor(model => model.nombreContacto, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.nombreContacto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="field">
                    @Html.LabelFor(model => model.telefono,"Telefono", htmlAttributes: new { @class = "label" })
                    <div class="control">
                        @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="field">
                    @Html.LabelFor(model => model.email,"Correo", htmlAttributes: new { @class = "label" })
                    <div class="control">
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="field">
                    @Html.LabelFor(model => model.direccion,"Direccion", htmlAttributes: new { @class = "label" })
                    <div class="control">
                        @Html.TextAreaFor(model => model.direccion,  new { @class = "textarea has-fixed-size", @rows = 4 } )
                        @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="columns">
                    <div class="column">
                        <input type="submit" value="Crear Contacto" class="button is-primary is-fullwidth" />
                    </div>
                    <div class="column">
                        <a href="javascript:history.back();" class="button is-fullwidth">Volver</a>
                    </div>
                </div>
                <br /><br />
            </div>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
